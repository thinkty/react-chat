{
  "name": "react-chat-interface",
  "version": "0.0.2",
  "author": "Tae Yoon Kim",
  "license": "MIT",
  "description": "A simple chat interface for React",
  "homepage": "https://github.com/thinkty/react-chat",
  "keywords": [
    "react",
    "chat-ui"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thinkty/react-chat.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "lint": "eslint src/",
    "lint:fix": "eslint --fix src/",
    "watch": "webpack --watch --config webpack.dev.ts",
    "watch:prod": "webpack --watch --config webpack.prod.ts",
    "serve": "webpack serve --config webpack.dev.ts",
    "build": "webpack --config webpack.prod.ts",
    "build:dev": "webpack --config webpack.dev.ts"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.10",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.15.0",
    "@types/react": "^17.0.21",
    "@types/react-dom": "^17.0.9",
    "@types/uuid": "^8.3.4",
    "@types/webpack": "^5.28.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.1",
    "webpack-merge": "^5.8.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "transform-react-remove-prop-types",
      "@babel/plugin-proposal-class-properties"
    ]
  }
}
